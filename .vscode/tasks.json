{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rojo: build",
            "isBackground": true,
            "problemMatcher": [],
            "command": "rojo",
            "args": [
                "build",
                "--color",
                "always",
                "--output",
                "Flat Terrain.rbxlx",
                "--verbose",
                "--watch"
            ]
        },
        {
            "label": "rojo: sourcemap",
            "isBackground": true,
            "problemMatcher": [],
            "command": "rojo",
            "args": [
                "sourcemap",
                "--color",
                "always",
                "--output",
                "sourcemap.json",
                "--verbose",
                "--watch"
            ]
        },
        {
            "label": "rojo: watch",
            "group": { "kind": "build", "isDefault": true },
            "dependsOn": ["rojo: build", "rojo: sourcemap"]
        }
    ]
}
